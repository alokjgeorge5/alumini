{
  "name": "alumni-connect-platform",
  "version": "1.0.0",
  "description": "Alumni Connect & Scholarship Support Platform - A mini LinkedIn for alumni-student connections",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd backend && python run.py",
    "client:dev": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "setup": "cd frontend && npm install",
    "db:setup": "mysql -u root -p < database/schema.sql"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["alumni", "scholarship", "mentorship", "career", "networking"],
  "author": "Alumni Connect Team",
  "license": "MIT"
}